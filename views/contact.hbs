<!DOCTYPE html>
<html>

<head>
    <title>Contact | AnimoLabs</title>
    <link rel="stylesheet" href="../public/contact.css">
    <script src="loggedin.js"></script>
    <script src="search.js"></script>
</head>

<body>
    <div class="container">
        <nav>
            <a href="../loggedin"><img class="logo" src="../public/images/dlsu-logo-green.png" /></a>
            <ul>
                <li><a href="../loggedin">Home</a></li>
                <li><a href="../lab">Laboratories</a></li>
                <li><a href="../about">About</a></li>
                <li><a href="../contact">Contact</a></li>
               <li class="search-container">
                    <button type="submit" class="search-button"></button>
                    <input type="text" id="searchInput" name="searchInput" placeholder="Search for users..." autocomplete="off">   
                </li>
            </ul>
            <img class="profile-image-nav" src="{{ user.imagePath }}" alt="Profile Photo">
            
            <div class="search-dd-container">
                <ul id="user-result">  
                </ul>
            </div>

            <div class="lab-dd-container">
                <div class="lab-dd">
                    <a href="../lab" class="lab-dd-link">
                        <p>Gokongwei</p>
                        <span>></span>
                    </a>
                    <a href="#" class="lab-dd-link">
                        <p>St. La Salle Hall</p>
                        <span>></span>
                    </a>
                    <a href="#" class="lab-dd-link">
                        <p>Velasco</p>
                        <span>></span>
                    </a>
                </div>
            </div>

            <div class="profile-dd-container">
                <div class="profile-dd">
                    <a href="../profile" class="user-profile">
                        <div class="user-info">
                            <img class="profile-img-dd" src="{{user.imagePath}}" alt="Profile Photo">
                              <h3>{{user.firstName}} {{user.lastName}}</h3>
                        </div>
                    </a>
                    <hr>

                    <a href="../editprofile" class="profile-dd-link">
                        <img src="../public/images/icons/edit-profile.png">
                        <p>Edit Profile</p>
                        <span>></span>
                    </a>

                    <a href="../userreservations" class="profile-dd-link">
                        <img src="../public/images/icons/reservation.png">
                        <p>My Reservations</p>
                        <span>></span>
                    </a>

                    <a href="../logout" class="profile-dd-link">
                        <img src="../public/images/icons/logout.png">
                        <p>Logout</p>
                        <span>></span>
                    </a>
                </div>
            </div>

        </nav>

        <div>
            <h2>Contact</h2>
            <div class="divider"></div>
        </div>

         <div class="contact-container">
            <div class="contact-contents">
                <form action="#" method="post" id="contactForm">
                    <label for="fullName">Full Name:</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required>

                    <label for="emailAddress">Email Address:</label>
                    <input type="email" id="emailAddress" name="emailAddress" placeholder="Enter your email address" required>

                    <label for="message">Message:</label>
                    <textarea id="message" name="message" placeholder="Write your message" required></textarea>

                    <div class="button-group">
                        <button type="submit" class="submit-button">Submit</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="popup-container">
            <div class="popup">
                <h3>Message sent</h3>
                <p>Thank You for Your Message. We'll reach out to you when possible.</p>
                <button class="popup-close-button">Close</button>
            </div>
        </div>

    </div>
</body>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const submitButton = document.querySelector('.submit-button');
        const popupContainer = document.querySelector('.popup-container');
        const popup = document.querySelector('.popup');
        const contactForm = document.getElementById('contactForm');
        const fullNameInput = document.getElementById('fullName');
        
        submitButton.addEventListener('click', function (event) {
            event.preventDefault();
            
            if (contactForm.checkValidity() && validateFullName(fullNameInput.value)) {
                popupContainer.style.display = 'flex';
                popup.style.display = 'flex';
                contactForm.reset();
            } else {
                contactForm.reportValidity();
            }
        });

        const closeButton = document.querySelector('.popup-close-button');
        closeButton.addEventListener('click', function () {
            popupContainer.style.display = 'none';
            popup.style.display = 'none';
        });

        function validateFullName(name) {
            const regex = /^[a-zA-Z\s]*$/; 
            return regex.test(name);
        }
    });
</script>

</html>
